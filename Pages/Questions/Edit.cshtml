@page "{questionId}"
@model Quanda.Pages.Questions.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post">
    <input type="hidden" asp-for="@Model.Question.QuestionId" />
    <input type="hidden" asp-for="@Model.Question.Created" />
    <input type="hidden" asp-for="@Model.Question.Edited" />
    <div class="form-group">
        <label asp-for="@Model.Question.QuestionTitle"></label><br/>
        <input class="form-control" asp-for="@Model.Question.QuestionTitle" /><br/>
        <span class="font-weight-bold text-danger" asp-validation-for="@Model.Question.QuestionTitle"></span>
    </div>        
    <div class="form-group">
        <label asp-for="@Model.Question.QuestionText"></label><br/>
        <textarea class="form-control" asp-for="@Model.Question.QuestionText"></textarea><br/>
        <span class="font-weight-bold text-danger" asp-validation-for="@Model.Question.QuestionTitle"></span>
    </div>
    <input class="btn btn-danger" type="submit" value="Update" />
</form>